<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"> <!-- pressed -->
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000">
            </stroke>
            <corners
                android:radius="10dp">
            </corners>
            <solid android:color="#AAAAAA"></solid>
        </shape>
    </item>


    <item> <!-- Default -->
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#000000">
            </stroke>
            <corners
                android:radius="10dp">
            </corners>
            <solid android:color="#62994E"></solid>
        </shape>
    </item>

</selector>