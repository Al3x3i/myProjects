<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:id="@+id/rel_btCompanyInfo"
        android:clickable="true"
        android:background="@drawable/custom_imageview_office_style"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/img_company_info"
            android:src="@drawable/ic_office"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="-5dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:id="@+id/text_companyName"
            android:textSize="20dp"
            android:textColor="#ff000000"
            android:layout_alignTop="@+id/img_company_info"
            android:layout_toRightOf="@+id/img_company_info"
            android:layout_marginLeft="15dp"
            android:layout_toLeftOf="@+id/imageView7"
            android:layout_toStartOf="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:id="@+id/text_companyCountry"
            android:textSize="16dp"
            android:layout_below="@+id/text_companyName"
            android:layout_alignLeft="@+id/text_companyName"
            android:layout_alignStart="@+id/text_companyName"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/view" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_action_next"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rel_btCompanyInfo"
        android:layout_alignLeft="@+id/rel_btCompanyInfo"
        android:layout_alignStart="@+id/rel_btCompanyInfo"
        android:layout_alignRight="@+id/rel_btCompanyInfo"
        android:layout_alignEnd="@+id/rel_btCompanyInfo">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_employeeList_CompanyResult"
            android:layout_below="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employees:"
            android:id="@+id/textView3"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="#ff000000" />
    </RelativeLayout>


</RelativeLayout>