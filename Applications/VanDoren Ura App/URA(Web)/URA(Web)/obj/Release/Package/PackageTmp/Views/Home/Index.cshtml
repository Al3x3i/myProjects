@model URA_Web_.Models.Account

@{
    ViewBag.Title = "Login Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Login Page</title>
    <link rel="stylesheet" type="text/css" href="content/index-style.css" />
</head>
<body>
    <div class="page">

        <div id="main">
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @id = "slick-login" }))
            {
                <div id="title">
                    <h1>Van Doren URA</h1>
                </div>
                if (@ViewBag.Message != null)
                {
                   <p style="color:red">@ViewBag.Message</p>
                }
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.TextBoxFor(m => m.Login, new { @placeholder = "Login" })
                @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                <input type="submit" value="Log In">
            }
        </div>
        <div id="footer">
        </div>
    </div>
</body>
</html>